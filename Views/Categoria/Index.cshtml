@model IEnumerable<feria.Models.Categorium>

@{
    ViewData["Title"] = "Categorias";
}

<h1>@ViewData["Title"]</h1>


<table class="table">
    <thead>
        <tr>
            <th>
              Nombre
            </th>
            <th style="text-align:center"><button type="button" class="btn btn-info"><a asp-action="Create" style="color:white">Agregar</a></button></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nonbre)
            </td>
            <td style="text-align:center">
                <button type="button" class="btn btn-info"><a asp-action="Edit" asp-route-id="@item.IdCategoria" style="color:white">Editar</a></button>
               
                <button type="button" class="btn btn-info"><a asp-action="Details" asp-route-id="@item.IdCategoria" style="color:white">Ver</a></button>
           
                <button type="button" class="btn btn-info"><a asp-action="Delete" asp-route-id="@item.IdCategoria" style="color:white">Eliminar</a></button>
            
            </td>
        </tr>
}
    </tbody>
</table>
