@model IEnumerable<feria.Models.Puesto>

@{
    ViewData["Title"] = "Index";
}

<h1>Puestos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Puesto
            </th>
            <th>
                Agricultor
            </th>
            <th>
                Producto 1
            </th>
            <th>
                Producto 2
            </th>
            <th>
                Producto 3
            </th>
            <th>
                Producto 4
            </th>
            <th>
                Producto 5
            </th>
            <th><button type="button" class="btn btn-info"><a asp-action="Create" style="color:white">Agregar</a></button></th>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPuesto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAgricultorNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto1Navigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto2Navigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto3Navigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto4Navigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto5Navigation.Nombre)
            </td>
            <td>
                <button type="button" class="btn btn-info"><a asp-action="Edit" asp-route-id="@item.IdPuesto" style="color:white">Editar</a></button>

                <button type="button" class="btn btn-info"><a asp-action="Details" asp-route-id="@item.IdPuesto" style="color:white">Ver</a></button>
           
                <button type="button" class="btn btn-info"><a asp-action="Delete" asp-route-id="@item.IdPuesto" style="color:white">Eliminar</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
