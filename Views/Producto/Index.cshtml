@model IEnumerable<feria.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Producto</h1>

<p>
  <!--  <a asp-action="Create">Agregar producto</a>-->
</p>
<table class="table primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidades)
            </th>
            <th>
            Categoria
            </th>
            <th style="text-align:center"><button type="button" class="btn btn-info"><a asp-action="Create" style="color:white">Agregar</a></button></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategoriaNavigation.Nonbre)
            </td>
            <td style="text-align:center">
                <button type="button" class="btn btn-info"><a asp-action="Edit" asp-route-id="@item.IdProducto" style="color:white">Editar</a></button>
                <!-- <a asp-action="Edit" asp-route-id="@item.IdProducto">Edit</a> -->
                <button type="button" class="btn btn-info"><a asp-action="Details" asp-route-id="@item.IdProducto" style="color:white">Ver</a></button>
                <!-- <a asp-action="Details" asp-route-id="@item.IdProducto">Details</a> -->
                <button type="button" class="btn btn-info"><a asp-action="Delete" asp-route-id="@item.IdProducto" style="color:white">Eliminar</a></button>
               <!-- <a asp-action="Delete" asp-route-id="@item.IdProducto">Delete</a>-->
            </td>
        </tr>
}
    </tbody>
</table>
