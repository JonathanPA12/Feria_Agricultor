@model feria.Models.Agricultor

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<h4>Agricultor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAgricultor" />
            <div class="form-group">
                Nombre
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
               Primer Apellido
                <input asp-for="Apel1" class="form-control" />
                <span asp-validation-for="Apel1" class="text-danger"></span>
            </div>
            <div class="form-group">
                Segundo Apellido
                <input asp-for="Apel2" class="form-control" />
                <span asp-validation-for="Apel2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
