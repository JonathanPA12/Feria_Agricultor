            </div>
            <div class="form-group">
                Producto 3
                <select asp-for="IdProducto3" class="form-control" asp-items="ViewBag.IdProducto3"></select>
            </div>
            <div class="form-group">
                Producto 4
                <select asp-for="IdProducto4" class="form-control" asp-items="ViewBag.IdProducto4"></select>
            </div>
            <div class="form-group">
                Producto 5
                <select asp-for="IdProducto5" class="form-control" asp-items="ViewBag.IdProducto5"></select>
            </div>
            <div class="form-group">
                <label asp-for="Disponibilidad" class="control-label"></label>
                <input asp-for="Disponibilidad" class="form-control" />
                <span asp-validation-for="Disponibilidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
